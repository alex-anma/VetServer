<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro Mascota</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />
  <link rel="stylesheet" href="/resources/css/estilosforms.css" />
</head>

<body>
	<% if (position === "administrador" || position === "médico veterinario" || position === "auxiliar veterinario") { %>
  <header class="header">
    <nav class="nav">
      <a href="./inicio" class="nav__items"><i class="fas fa-user"></i>Clientes</a>
      <a href="./mascotas" class="nav__items"><i class="fas fa-paw"></i>Mascotas</a>
      <!-- <a href="./form_historial.html" class="nav__items"><i class="fas fa-dollar-sign"></i>Tienda</a> -->
			<% if (position === "administrador") { %>
      <a href="./form_usuario" class="nav__items"><i class="fas fa-user-plus add"></i>Añadir Usuario</a>
      <% } %>
      <a href="./" class="nav__items"><i class="fas fa-sign-out-alt"></i>Cerrar Sesión</a>
    </nav>
  </header>
  <div class="container">
    <div class="title">Ingrese Datos Mascota</div>
    <form action="/form_mascota" method="POST">
      <div class="user-details">
        <div class="input-box">
          <label class="details" for="id_pet">ID Mascota</label>
          <input type="text" name="id_pet" placeholder="Código" required />
        </div>

        <div class="input-box">
          <label class="details" for="chip">Chip</label>
          <input type="text" name="chip" placeholder="Chip" />
        </div>

        <div class="input-box">
          <label class="details" for="name">Nombre</label>
          <input type="text" name="name" placeholder="Nombre" required />
        </div>

        <div class="input-box">
          <label class="details" for="last_name">Apellidos</label>
          <input type="text" name="last_name" placeholder="Apellidos" required />
        </div>

        <div class="input-box">
          <label class="details" for="birth_date">Fecha Nacimiento</label>
          <input name="birth_date" type="date" required id="start" name="trip-start" min="1965-01-01"
            max="2021-12-31" />
          <span></span>
        </div>

        <div class="input-box">
          <label class="details" for="species">Especie</label>
          <select class="select" name="species" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="canino">Canino</option>
            <option value="felino">Felino</option>
            <option value="otro">Otro</option>
          </select>
        </div>

        <div class="input-box">
          <label class="details" for="race">Raza</label>
          <input type="text" name="race" placeholder="Raza" required />
        </div>

        <div class="input-box">
          <label class="details" for="gender">Sexo</label>
          <select class="select" name="gender" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="hembra">Hembra</option>
            <option value="macho">Macho</option>
          </select>
        </div>

        <div class="input-box">
          <label class="details" for="reproductive_status">Estado reproductivo</label>
          <select class="select" name="reproductive_status" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="entero">Entero</option>
            <option value="esterilizado">Esterilizado</option>
          </select>
        </div>

        <div class="input-box">
          <label class="details" for="deworming">Fecha de desparasitación</label>
          <input name="deworming" type="date" id="start" min="1965-01-01" max="2021-12-31" />
          <span></span>
        </div>

        <div class="input-box">
          <label class="details" for="vaccination">Fecha de vacunación</label>
          <input name="vaccination" type="date" id="start" min="1965-01-01" max="2021-12-31" />
          <span></span>
        </div>

        <div class="input-box">
          <label class="details" for="state_pet">Estado</label>
          <select class="select" name="state_pet" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="vivo">Vivo</option>
            <option value="fallecido">Fallecido</option>
          </select>
        </div>

        <input class="buttonr" type="submit" id="buttonr" value="Registrar Historia Clínica" />

      </div>
    </form>
  </div>
  <script src="https://kit.fontawesome.com/7d3e6d734e.js" crossorigin="anonymous"></script>

  <!--SWEET ALERT 2-->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if(typeof alert !="undefined" ) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
            }).then(() => {
          window.location = '/<%=ruta%>'
        })
    </script>
    <% } %>
    <% } else { %>
      <a href="/">Inicio</a>
    <% } %>
</body>

</html>