            <option value="1">N</option>
            <option value="2">A</option>
          </select>
          <input type="text" name="obsermusc" placeholder="Observaciones" />
        </div>

        <div class="input-box">
          <label for="" class="details">Sist. Nervioso</label>
          <select class="select" name="sistnerv" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="1">N</option>
            <option value="2">A</option>
          </select>
          <input type="text" name="obsernerv" placeholder="Observaciones" />
        </div>

        <div class="input-box">
          <label for="" class="details">Piel y anexos</label>
          <select class="select" name="piel" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="1">N</option>
            <option value="2">A</option>
          </select>
          <input type="text" name="obserpiel" placeholder="Observaciones" />
