          <input type="text" name="obseractitud" placeholder="Observaciones" />
        </div>

        <div class="input-box">
          <label for="" class="details">Ojos</label>
          <select class="select" name="ojos" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="1">N</option>
            <option value="2">A</option>
          </select>
          <input type="text" name="obserojos" placeholder="Observaciones" />
        </div>

        <div class="input-box">
