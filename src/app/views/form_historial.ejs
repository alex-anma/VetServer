<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Historial Clínico</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />
  <link rel="stylesheet" href="/resources/css/estilosforms.css" />
</head>

<body>
  <header class="header">
    <nav class="nav">
      <a href="./inicio" class="nav__items"><i class="fas fa-user"></i>Cliente</a>
      <a href="./mascotas" class="nav__items"><i class="fas fa-paw"></i>Mascotas</a>
      <!-- <a href="./form_historial.html" class="nav__items"><i class="fas fa-dollar-sign"></i>Tienda</a> -->
			<% if (position === "administrador") { %>
      <a href="./form_usuario" class="nav__items"><i class="fas fa-user-plus add"></i>Añadir Usuario</a>
			<% } %>
      <a href="./logout" class="nav__items"><i class="fas fa-sign-out-alt"></i>Cerrar Sesión</a>
    </nav>
  </header>
  <div class="container">
    <div class="title">Historia Clínica</div>
    <form action="form_historial.ejs" method="POST">
      <div class="user-details">

        <div class="input-box">
          <label class="details" for="date_clinical_histories">Fecha</label>
          <input name="date_clinical_histories" type="date" required id="start" name="trip-start" min="1965-01-01" max="2021-12-31" />
          <span></span>

        </div>

        <div class="input-box">
          <label for="visit_pet" class="details">Motivo de visita</label>
          <select class="select" name="visit_pet" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="Nueva consulta">Nueva consulta</option>
            <option value="Control">Control</option>
            <option value="Cita especialista">Cita especialista</option>
          </select>
        </div>

        <div class="input-box">
          <label for="anamnesis" class="details">Anamnesis</label>
          <input type="text" name="anamnesis" placeholder="" required />
        </div>

        <div class="input-box">
          <label for="" class="details">Enfermemdades previas</label>
          <input type="text" name="enfprev" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Tratamientos recientes</label>
          <input type="text" name="tratrec" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Cirugías</label>
          <input type="text" name="cirugias" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Dieta y frecuencia</label>
          <input type="text" name="dieta" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Comportamiento</label>
          <input type="text" name="comportamiento" placeholder="" />
        </div>

        <div class="title">Examen Físico General</div>
        <div class="input-box">
          <label for="" class="details"></label>
        </div>

        <div class="input-box">
          <label for="" class="details">Peso (kg)</label>
          <input type="text" name="peso" placeholder="Kg" />
        </div>

        <div class="input-box">
          <label for="" class="details">Temperatura (ºC)</label>
          <input type="text" name="temp" placeholder="ºC" />
        </div>

        <div class="input-box">
          <label for="" class="details">Frecuencia cardíaca (LPM/min)</label>
          <input type="text" name="freccard" placeholder="LPM/min" />
        </div>

        <div class="input-box">
          <label for="" class="details">Frecuencia respiratoria (RPM/min)</label>
          <input type="text" name="frecresp" placeholder="RPM/min" />
        </div>

        <div class="input-box">
          <label for="" class="details">Tiempo llenado Capilar (TLLC/seg)</label>
          <input type="text" name="tllc" placeholder="TLLC/seg" />
        </div>

        <div class="input-box">
          <label for="" class="details">Pliegue cutaneo (seg)</label>
          <input type="text" name="cutaneo" placeholder="seg" />
        </div>

        <div class="input-box">
          <label for="" class="details">Deshidratación (%)</label>
          <input type="text" name="deshidratación" placeholder="%" />
        </div>

        <div class="input-box">
          <label for="" class="details">Reflejo Tusígeno</label>
          <input type="text" name="tusigeno" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Pulso</label>
          <input type="text" name="pulso" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Mucosas</label>
          <input type="text" name="mucosas" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details">Condición Corporal (1-9)</label>
          <input type="text" name="condicion" placeholder="1-9" />
        </div>

        <div class="input-box">
          <label for="" class="details">Ganglios superficiales</label>
          <select class="select" name="ganglios" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="1">Reactivos</option>
            <option value="2">No reactivos</option>
          </select>
        </div>

        <div class="input-box">
          <label for="" class="details">Palmo percusión</label>
          <input type="text" name="percusion" placeholder="" />
        </div>

        <div class="input-box">
          <label for="" class="details"></label>
        </div>
        <div class="title">Examen Físico Especial</div>
        <div class="input-box">
          <label for="" class="details"></label>
        </div>

        <div class="input-box">
          <label for="" class="details">Hidratación</label>
          <select class="select" name="hidratacion2" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="1">N</option>
            <option value="2">A</option>
          </select>
        </div>

        <div class="input-box">
