          <input type="text" name="plan" placeholder="" />
        </div>

        <!-- Formulario Tratamiento -->

        <div class="title">Tratamiento</div>
        <div class="input-box">
          <label for="" class="details"></label>
        </div>

        <div class="input-box">
          <label for="" class="details">Tratamiento</label>
          <input type="text" name="tratamiento" placeholder="Medicamento/Dosis/Vía/Frec/Duración" />
        </div>

        <div class="input-box">
          <label for="" class="details"></label>
        </div>

        <input class="buttonm" type="submit" id="buttonm" value="Guardar" />

      </div>
