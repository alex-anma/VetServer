<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro Cliente</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />
  <link rel="stylesheet" href="/resources/css/estilosforms.css" />
</head>

<body>
  <% if (position === "administrador" || position === "médico veterinario" || position === "auxiliar veterinario") { %>
  <header class="header">
    <nav class="nav">
      <a href="./inicio" class="nav__items"><i class="fas fa-user"></i>Clientes</a>
      <a href="./mascotas" class="nav__items"><i class="fas fa-paw"></i>Mascotas</a>
      <!-- <a href="./form_historial.html" class="nav__items"><i class="fas fa-dollar-sign"></i>Tienda</a> -->
      <% if (position === "administrador") { %>
      <a href="./form_usuario" class="nav__items"><i class="fas fa-user-plus add"></i>Añadir Usuario</a>
      <% } %>
      <a href="./logout" class="nav__items"><i class="fas fa-sign-out-alt"></i>Cerrar Sesión</a>
    </nav>
  </header>
  <div class="container">
    <div class="title">Registro Clientes</div>
    <form action="form_cliente" method="POST">
      <div class="user-details">
        <div class="input-box">
          <label class="details" for="id_client">Documento ID</label>
          <input type="text" name="id_client" placeholder="Documento identidad" required />
        </div>
        <div class="input-box">
          <label class="details" for="name">Nombres</label>
          <input type="text" name="name" placeholder="Nombres" required />
        </div>

        <div class="input-box">
          <label class="details" for="surname">Primer apellido</label>
          <input type="text" name="surname" placeholder="Primer apellido" required />
        </div>

        <div class="input-box">
          <label class="details" for="second_surname">Segundo apellido</label>
          <input type="text" name="second_surname" placeholder="Segundo apellido" required />
        </div>

        <div class="input-box">
          <label class="details" for="birth_date">Fecha Nacimiento</label>
          <input name="birth_date" type="date" required id="start" name="trip-start" min="1965-01-01" max="2021-12-31" />
          <span></span>

        </div>

        <div class="input-box">
          <label class="details" for="gender">Sexo</label>
          <select class="select" name="gender" aria-label="Default select example">
            <option selected>Seleccione una opción</option>
            <option value="Femenino">Femenino</option>
            <option value="Masculino">Masculino</option>
            <option value="Prefiero no decir">Prefiero no decir</option>
          </select>
        </div>

        <div class="input-box">
          <label class="details" for="email">Correo electrónico</label>
          <input type="text" name="email" placeholder="Email" required />
        </div>

        <div class="input-box">
          <label class="details" for="address">Dirección</label>
          <input type="text" name="address" placeholder="Dirección" />
        </div>

        <div class="input-box">
          <label class="details" for="tel">Teléfono</label>
          <input type="text" name="tel" placeholder="Teléfono" />
        </div>

        <div class="input-box">
          <label class="details" for="cel">Celular</label>
          <input type="text" name="cel" placeholder="Celular" required />
        </div>

        <input class="buttonm" type="submit" id="buttonm" value="Agregar Mascota" />
        <a href="./form_mascota">Mascota</a>

        <!-- <input class="buttonc"
            type="submit"
            id="buttonm"
            value="Registar compra"
          /> -->

        <input class="buttonr" type="submit" id="buttonr" value="Registrar" />
    </form>
  </div>
  </div>
  <script src="https://kit.fontawesome.com/7d3e6d734e.js" crossorigin="anonymous"></script>

  <!--SWEET ALERT 2-->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if(typeof alert !="undefined" ) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
            }).then(() => {
          window.location = '/<%=ruta%>'
        })
    </script>
    <% } %>
    <% } else { %>
      <a href="/">Inicio</a>
    <% } %>
</body>

</html>